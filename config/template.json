{
    "border": {
        "defaults": {
            "width": 0,
            "type": "solid",
            "color": "#000000"
        },
        "template": "border: {width}px {type} {color};"
    },
    "border-left": {
        "defaults": {
            "width": 0,
            "type": "solid",
            "color": "#000000"
        },
        "template": "border-left: {width}px {type} {color};"
    },
    "border-right": {
        "defaults": {
            "width": 0,
            "type": "solid",
            "color": "#000000"
        },
        "template": "border-right: {width}px {type} {color};"
    },
    "background": {
        "defaults": {
            "value": "#000000"
        },
        "template": "background-color: {value};"
    },
    "linear-gradient": {
        "defaults": {
            "color1": "#a3b13a",
            "color2": "#ffffff",
            "start": 42,
            "end": 100
        },
        "template": [
            "background: {color1};",
            "background: -moz-moz-linear-gradient(-45deg, {color1} {start}%, {color2} {end}%);",
            "background: -webkit-gradient(linear, left top, right bottom, color-stop({start}%, {color1}), color-stop({end}%, {color2}));",
            "background: -webkit-linear-gradient(-45deg, {color1} 42%, {color2} {end}%);",
            "background: -o-linear-gradient(-45deg, {color1} 42%, {color2} {end}%);",
            "background: -ms-linear-gradient(-45deg, {color1} 42%, {color2} {end}%);",
            "background: linear-gradient(135deg, {color1} 42%, {color2} {end}%);",
            "filter: progid:DXImageTransform.Microsoft.gradient(startColorstr = '{color1}', endColorstr = '{color2}', GradientType=0);"
        ]
    },
    "color": {
        "defaults": {
            "value": "#ffffff"
        },
        "template": "color: {value};"
    },
    "font-size": {
        "defaults": {
            "value": 12
        },
        "template": "font-size: {value}px;"
    },
    "font-weight": {
        "defaults": {
            "value": "normal"
        },
        "template": "font-weight: {value};"
    },
    "text-decoration": {
        "defaults": {
            "value": "none"
        },
        "template": "text-decoration: {value};"
    },
    "border-radius": {
        "defaults": {
            "value": 0
        },
        "template": [
            "-moz-border-radius: {value}px;",
            "-webkit-border-radius: {value}px;",
            "-khtml-border-radius: {value}px;",
            "border-radius: {value}px;"
        ]
    },
    "box-shadow": {
        "defaults": {
            "x": 0,
            "y": 0,
            "value": 0,
            "color": "#ffffff"
        },
        "template": [
            "-moz-box-shadow: 0 0 {value}px {color};",
            "-webkit-box-shadow: 0 0 {value}px {color};",
            "box-shadow: 0 0 {value}px {color};"
        ]
    }
}
